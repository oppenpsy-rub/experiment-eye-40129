{
  "name": "perzeptionsexperimente-auswertung-electron",
  "version": "0.1.0",
  "main": "main.js",
  "private": true,
  "scripts": {
    "dev": "electron .",
    "build:win": "electron-builder --projectDir=. --win nsis",
    "build:mac": "electron-builder --projectDir=. --mac dmg",
    "build:mac:universal": "electron-builder --projectDir=. --mac dmg zip --universal --publish=never",
    "build": "electron-builder"
  },
  "build": {
    "appId": "de.floem.perzeptionsexperimente",
    "productName": "Forschungsdaten-Analyseplattform",
    "directories": {
      "app": ".",
      "output": "../electron-dist"
    },
    "beforePack": "./build-hooks/beforePack.js",
    "afterPack": "./build-hooks/afterPack.js",
    "asar": true,
    "files": [
      "**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "../src-tauri/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "unicode": true,
      "shortcutName": "Forschungsdaten-Analyseplattform",
      "runAfterFinish": true
    },
    "mac": {
      "category": "public.app-category.education",
      "artifactName": "Forschungsdaten-Analyseplattform-${version}-${arch}.${ext}",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "icon.icns",
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    }
  },
  "devDependencies": {
    "asar": "^3.2.0",
    "electron": "^31.0.0",
    "electron-builder": "^24.8.0"
  },
  "dependencies": {
    "vite_react_shadcn_ts": "file:.."
  }
}
